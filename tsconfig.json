    "include": [
        // 全局的 类型定义文件
        "./types/jsfl-typescript/jsfl.d.ts",
        "types/myShim/global.d.ts",

        // 需要编译的文件夹
        "./test/**/*.ts",
        "./lib/**/*.ts",
        "./Core/**/*.ts"
    ],
    "typeRoots": [
        "./node_modules/@types",
        "./types"
    ],
    "exclude": ["Core/**/**skip*"]   // 排除文件名中含 _skip 的所有文件




}
