            "FilterOperation": ["Core/flash/filter/FilterOperation.jsfl"],
            "FilterQuery": ["Core/flash/filter/FilterQuery.jsfl"],
            "FolderChecker": ["Core/flash/Folder/FolderChecker.jsfl"],
